<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_300mdp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5mdp"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profil_img"
        android:layout_width="@dimen/_40mdp"
        android:layout_height="@dimen/_40mdp"
        android:src="@drawable/icon_profil"/>

    <TextView
        android:id="@+id/show_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profil_img"
        android:layout_marginLeft="@dimen/_5mdp"
        android:text="hello"
        android:padding="@dimen/_8mdp"
        android:background="@drawable/chat_left"/>



</RelativeLayout>